# correctly displayed, fix your editor first!

general {
  colors = true
  color_good = "#a3be8c"
  color_degraded = "#ebcb8b"
  color_bad = "#bf616a"
  interval = 1
  separator = " | "
}
order +="cpu_usage"
order +="ethernet"
order += "disk /"
order +="wireless wlan0"
order +="volume master"
order += "memory"
order += "battery all"
order +="tztime local"


volume master {
        format = " â™ª: %volume "
        format_muted = " â™ª: muted (%volume) "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
cpu_usage{
	format = " cpu: %usage "
	degraded_threshold = 90
}

disk "/" {
	format = " storage: %percentage_used/%total "
}

wireless wlan0 {
        format_up = " W: (%quality at %essid, %bitrate) %ip "
        format_down = " W: down "
}
#wireless wlan0 {
 # format_up = " WLS: (%quality at %ssid) %ip "
  #format_down  = "WLS: down"
#}
battery all{
	path = "/sys/class/power_supply/BAT%d/uevent"
	#path=/sys/class/power_supply/%d/uevent
	format = " battery: %status %percentage "
	last_full_capacity = true
	threshold_type= percentage
	low_threshold= 20
	format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
}
tztime local {
        format = " %Y-%m-%d %I:%M:%S "
}

memory {
  memory_used_method = classical
  format=" memory: %used/%total "
}
